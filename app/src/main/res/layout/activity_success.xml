<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/purple_200"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/calculation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="none"
        android:singleLine="false"
        android:layout_marginTop="188dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/design_default_color_secondary"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="80dp" />

    <TextView
        android:id="@+id/timeDeclaratiom"
        android:layout_width="339dp"
        android:layout_height="58dp"
        android:layout_marginTop="4dp"
        android:text="@string/the_time_it_took_to_calculate_is"
        android:textSize="24sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/calculation"
        tools:layout_editor_absoluteX="36dp" />

    <TextView
        android:id="@+id/timeItTook"
        android:layout_width="42dp"
        android:layout_height="45dp"
        android:layout_marginEnd="184dp"
        android:text=""
        android:gravity="center"
        android:textColor="@color/design_default_color_secondary"
        android:textSize="36sp"
        app:layout_constraintTop_toBottomOf="@+id/timeDeclaratiom"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>